@page
@model WebApplication6.Pages.Clients.EditModel
@{
}

<br />
<h2>Sửa</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <input type="hidden" name="id" value="@Model.client.id" />
    <div class=" row mb-3">
        <label class="col-sm-3 col-form-label">Tên</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.client.name" />
        </div>
    </div>
    <div class=" row mb-3">
        <label class="col-sm-3 col-form-label">Mô tả</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="des" value="@Model.client.des" />
        </div>
    </div>
    <div class=" row mb-3">
        <label class="col-sm-3 col-form-label">Giá</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="price" value="@Model.client.price" />
        </div>
    </div>
    <div class=" row mb-3">
        <label class="col-sm-3 col-form-label">Số lượng</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="quantity" value="@Model.client.quantity" />
        </div>
    </div>
    <div class=" row mb-3">
        <label class="col-sm-3 col-form-label">Hình ảnh</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="img" value="@Model.client.img" />
        </div>
    </div>
    <div class=" row mb-3">
        <label class="col-sm-3 col-form-label">NSX</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="mfg" value="@Model.client.mfg" />
        </div>
    </div>
    <div class=" row mb-3">
        <label class="col-sm-3 col-form-label">HSD</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="exp" value="@Model.client.exp" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <div class=" row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>